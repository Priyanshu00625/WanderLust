<% layout("/layouts/boilerplate") %>

<div class="row mt-4">
  <div class="col-8 offset-2">
    <h3>Listing Details:</h3>
  </div>

  <div class="card col-6 offset-2 show-card mt-3">
    <img 
      src="<%= listing.image.url %>" 
      class="card-img-top show-img" 
      alt="listing_image"
    />
    <div class="card-body">
      <h5 class="card-title"><%= listing.title %></h5>
      <ul class="card-text list-unstyled">
        <li><strong>Description:</strong> <%= listing.description %></li>
        <li><strong>Price:</strong> &#8377 <%= listing.price.toLocaleString("en-IN") %></li>
        <li><strong>Location:</strong> <%= listing.location %></li>
        <li><strong>Country:</strong> <%= listing.country %></li>
      </ul>
    </div>
  </div>

  <div class="col-8 offset-2 mt-3 d-flex gap-2">
    <a class="btn btn-dark" href="/listings/<%= listing._id %>/edit">Edit</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
</div>
